{
    "NAME": "metasub_cap",
    "VERSION": "0.0.1",

    "SNAKEMAKE" :{
	"DIR": "snakemake_files",
	"CONF": "pipeline_config.json"
    },

    "REQUIREMENTS" :{},
    
    "ORIGINS": ["raw_short_read_dna"],
    "SAMPLE_TYPES" : [],
    "FILE_TYPES": [
	{ "name": "gz_fastq", "ext": "fastq.gz"},
	"fastqc",
	"bam",
	{ "name": "mpa", "ext": "mpa.tsv"},
	"fasta",
	"fastg",
	"vcf",
	"tsv",
	{"name": "gz_tsv", "ext": "tsv.gz"},
	"json"
    ],
    "RESULT_TYPES": [
	{
	    "NAME": "raw_short_read_dna",
	    "FILES": {
		"read1": "gz_fastq",
		"read2": "gz_fastq"
	    }
	},
	{
	    "NAME": "filter_macrobial_dna",
	    "DEPENDENCIES": ["raw_short_read_dna"],
	    "FILES": {
		"macrobial_read1": "gz_fastq",
		"macrobial_read2": "gz_fastq",
		"microbial_read1": "gz_fastq",
		"microbial_read2": "gz_fastq",
		"bam": "bam"
	    }
	},
	{
	    "NAME": "shortbred_amr_profiling",
	    "DEPENDENCIES": ["microbial_short_read_dna"],
	    "FILES": { "table" : "tsv"}
	},
	{
	    "NAME": "kraken_taxonomy_profiling",
	    "DEPENDENCIES": ["microbial_short_read_dna"],
	    "FILES": {
		"read_assignments":  "tsv",
		"mpa": "mpa"
	    }
	},
	{
	    "NAME": "metaphlan2_taxonomy_profiling",
	    "DEPENDENCIES": ["microbial_short_read_dna"],
	    "FILES": { "mpa": "mpa"}
	},
	{
	    "NAME": "microbe_census",
	    "DEPENDENCIES": ["microbial_short_read_dna"],
	    "FILES": {"stats": "txt"}
	},
	{
	    "NAME": "hmp_site_dists",
	    "DEPENDENCIES" : [
		"metaphlan2_taxonomy_profiling",
		"kraken_taxonomy_profiling",
		"mash_intersample_dists"],
	    "FILES" : {
		"metaphlan2" : "json",
		"kraken" : "json",
		"mash": "json"
	    }
	},	
	{
	    "NAME": "humann2_functional_profiling",
	    "DEPENDENCIES": ["microbial_short_read_dna"],
	    "FILES": {
		"m8": "m8",
		"genes": "tsv",
		"path_abunds": "tsv",
		"path_cov":"tsv"
	    }
	}

	
    ]
}
	    
	    
	    
